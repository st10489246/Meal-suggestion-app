<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BD0E0E"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="156dp"
        android:layout_height="94dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/baloo"
        android:text="HELEN'S PAPRIKA"
        android:textColor="#E7D9D9"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="152dp"
        android:layout_height="168dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paprika" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/baloo"
        android:text="PLEASE ENTER THE TIME OF DAY:"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edtTime"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTime"
        android:layout_width="213dp"
        android:layout_height="52dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:hint="morning"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/txtResults"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtResults"
        android:layout_width="295dp"
        android:layout_height="78dp"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="@font/baloo"
        android:textColor="#DBC5C5"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOptions"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="75dp"
        android:text="SUGGESTIONS"
        android:textColor="#EFE3E3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="75dp"
        android:text="RESET"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>